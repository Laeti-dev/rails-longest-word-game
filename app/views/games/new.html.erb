
<div class="letters-container">
  <% @letters.each do | letter | %>
    <div class="letter-box"><%= letter %></div>
  <% end %>
</div>



<p>Enter your word: </p>
<form action='/score' method='post' data-turbo='false'>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%# add a hidden input field with an authenticity_token that ensures the POST request is coming from your website and not from another. %>
  <input type='text' name='word' placeholder='Your word' autocomplete='off' class='word-input'>
  <input type="hidden" name="letters" value="<%= @letters %>">
  <input type="submit" value="Play!" class='btn'>
</form>

<p>Max Score = <%= @score %></p>
<%= link_to "Reset", new_path %>
